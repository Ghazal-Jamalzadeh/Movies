<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- من نیازی به اکشن بار ندارم پس تم را از دارک اکشن بار به نو اکشن بار تغییر میدم -->
    <style name="Theme.Movies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- با رنگ های خودم عوض میکنم رنگ های اینجا را -->

        <!-- Primary brand color. -->

        <!-- رنگ اصلی -->
        <item name="colorPrimary">@color/crayola</item>

        <!-- رنگ استاتوس بار زمانی که اپ اجرا میشه ( نوتیفیکشن بار) -->
        <item name="colorPrimaryVariant">@color/chineseBlack</item>

        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->

        <!-- رنگی که بعضی ویوها ازش استفاده میکنن مثل پروگرس بار یا زیر ادیت تکست ها -->
        <item name="colorSecondary">@color/crayola</item>

        <item name="colorSecondaryVariant">@color/crayola</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- چون تمامی صفحات من قراره یک رنگ بک گراند داشته باشه پس من میتونم اون رنگ رو توی تم خودم اعمال کنم
         در این صورت دیگر نیازی نیست روی تمام صفحات بک گراند ست کنم
         برای این کار از windowBackground استفاده میکنیم
         -->
        <item name="android:windowBackground">@color/chineseBlack</item>
    </style>

    <!--TextView-->
    <style name="TextViewLightStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>
    <!--TextInputLayout-->
    <style name="CustomFilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/crayola</item>
        <item name="boxStrokeColor">@color/crayola</item>
        <item name="boxBackgroundColor">@color/gunmetal</item>
        <item name="startIconTint">@color/philippineSilver</item>
    </style>
    <!--RoundedImageView-->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10mdp</item>
    </style>

</resources>