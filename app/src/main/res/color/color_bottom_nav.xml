<?xml version="1.0" encoding="utf-8"?>

<!-- کلا برای ایجاد حالت های مختلف رنگ روی ویو ها از پوشه color و به این شکل استفاده میکنیم -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- حالتی که انتخاب نشده -->
    <item android:color="@color/philippineSilver" android:state_checked="false" />
    <!-- حالتی که انتخاب شده -->
    <item android:color="@color/crayola" android:state_checked="true" />
</selector>